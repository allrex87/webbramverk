class ApplicationController < ActionController::Base
  
  protect_from_forgery
  before_filter :confirm_logged_in, :except => [:new, :create, :logout]
  
    #in application.rb
     before_filter   :login_required, :except => [:welcome,:login]

  def confirm_logged_in
    
    @cName = self.controller_name
    if @cName == 'projects' || @cName == 'tickets' || @cName == 'projects'
      return false
    end

    unless current_user
      redirect_to login_invite_url
    end
    
    
    
    unless session[:user_id]
      return false
    else
      return true
    end
    end
end
